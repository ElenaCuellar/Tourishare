<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloritembandejaentrada">

    <LinearLayout
        android:id="@+id/capacbandeja"
        android:layout_width="match_parent"
        android:background="@color/colortitulobandejaentrada"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tituloBandeja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="8sp"
            android:text="@string/titulobandejaentrada"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/capacbandeja">
    </ListView>

</RelativeLayout>